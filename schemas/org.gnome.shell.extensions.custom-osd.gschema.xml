<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="custom-osd">
  <schema id="org.gnome.shell.extensions.custom-osd" path="/org/gnome/shell/extensions/custom-osd/">
    <key type="b" name="icon">
      <default>true</default>
      <summary>Icon</summary>
      <description>OSD Icon.</description>
    </key>
    <key type="b" name="label">
      <default>true</default>
      <summary>Label</summary>
      <description>OSD Label.</description>
    </key>
    <key type="b" name="level">
      <default>true</default>
      <summary>Level Bar</summary>
      <description>Level Bar.</description>
    </key>
    <key type="b" name="numeric">
      <default>true</default>
      <summary>Numeric Level</summary>
      <description>Numeric level % along with level bar.</description>
    </key>
    <key type="d" name="horizontal">
      <default>0.0</default>
      <summary>Horizontal Position (%)</summary>
      <description>The percentage of the screen width (from the center of the screen) at which the OSD will be displayed.</description>
    </key>
    <key type="d" name="vertical">
      <default>0.0</default>
      <summary>Vertical Position (%)</summary>
      <description>The percentage of the screen height (from the center of the screen) at which the OSD will be displayed.</description>
    </key>
    <key type="d" name="size">
      <default>15.0</default>
      <summary>OSD size (screen %)</summary>
      <description>Relative OSD size.</description>
    </key>
    <key type="d" name="delay">
      <default>1500.0</default>
      <summary>Hide delay (ms)</summary>
      <description>How long the OSD will be displayed.</description>
    </key>
    <key type="as" name="color">
      <default>['1.0', '1.0', '1.0', '1.0']</default>
      <summary>Color (RGBA)</summary>
      <description>Color of OSD.</description>
    </key>
    <key type="as" name="bgcolor">
      <default>['0.0', '0.73', '0.73', '1.0']</default>
      <summary>BG Color (RGB)</summary>
      <description>Background Color of OSD.</description>
    </key>
    <key type="as" name="bgcolor2">
      <default>['0.75', '0.40', '0.95', '1.0']</default>
      <summary>Gradient end color (RGB)</summary>
      <description>Gradient end color of OSD background.</description>
    </key>
    <key type="s" name="gradient-direction">
      <default>"horizontal"</default>
      <summary>Gradient direction</summary>
      <description>Gradient direction of OSD background.</description>
    </key>
    <key type="s" name="bg-effect">
      <default>"none"</default>
      <summary>Background Effect</summary>
      <description>Background Effect of OSD.</description>
    </key>
    <key type="d" name="alpha">
      <default>90.0</default>
      <summary>Transparency (alpha)</summary>
      <description>Transparency of OSD.</description>
    </key>
    <key type="b" name="shadow">
      <default>true</default>
      <summary>Box Shadow</summary>
      <description>Box Shadow of OSD.</description>
    </key>
    <key type="b" name="border">
      <default>false</default>
      <summary>Box Border</summary>
      <description>Box Border of OSD.</description>
    </key>
    <key type="d" name="bradius">
      <default>100.0</default>
      <summary>Pill Shape</summary>
      <description>Convert between rectangle and pill shapes.</description>
    </key>
    <key type="b" name="rotate">
      <default>false</default>
      <summary>Vertical</summary>
      <description>Vertical orientation of OSD.</description>
    </key>
    <key type="s" name="monitors">
      <default>"all"</default>
      <summary>Monitors for OSD</summary>
      <description>Monitors to show OSD display on.</description>
    </key>
    <key type="as" name="clock-osd">
      <default><![CDATA[['']]]></default>
      <summary>Hotkey to show date-time-osd.</summary>
    </key>
    <key type="s" name="font">
      <default>""</default>
      <summary>Font</summary>
      <description>Font of OSD.</description>
    </key>
    <key type="s" name="default-font">
      <default>""</default>
      <summary>Default Font</summary>
      <description>Default Font of OSD.</description>
    </key>
    <key type="a{sb}" name="osd-all">
      <default>{'icon-all': true, 'label-all': true, 'level-all': true, 'numeric-all': true}</default>
      <summary>OSD All</summary>
      <description>OSD All.</description>
    </key>
    <key type="a{sb}" name="osd-nolabel">
      <default>{'icon-nolabel': true, 'level-nolabel': true, 'numeric-nolabel': true}</default>
      <summary>OSD No Label</summary>
      <description>OSD No Label.</description>
    </key>
    <key type="a{sb}" name="osd-nolevel">
      <default>{'icon-nolevel': true, 'label-nolevel': true}</default>
      <summary>OSD No Level</summary>
      <description>OSD No Level.</description>
    </key>
    <key type="s" name="active-profile">
      <default>"Default"</default>
      <summary>Active Profile</summary>
      <description>Settings Profile currently applied to all OSDs.</description>
    </key>
    <key type="a{sv}" name="profiles">
      <default><![CDATA[
        {
          'Default': <{
            'horizontal': <0.0>,
            'vertical': <0.0>,
            'size': <15.0>,
            'rotate': <false>,
            'bradius': <100.0>,
            'color': <['1.0', '1.0', '1.0', '1.0']>,
            'bgcolor': <['0.0', '0.73', '0.73', '1.0']>,
            'bgcolor2': <['0.75', '0.40', '0.95', '1.0']>,
            'gradient-direction': <'horizontal'>,
            'bg-effect': <'none'>,
            'alpha': <90.0>,
            'shadow': <false>,
            'border': <true>,
            'font': <''>,
            'delay': <1500.0>,
            'monitors': <'all'>,
            'clock-osd': <['']>,
            'osd-all': <{'icon': true, 'label': true, 'level': true, 'numeric': true}>,
            'osd-nolabel': <{'icon': true, 'level': true, 'numeric': true}>,
            'osd-nolevel': <{'icon': true, 'label': true}>      
          }>
        }
      ]]></default>
      <summary>Profiles</summary>
      <description>Settings Profiles.</description>
    </key>
  </schema>
</schemalist>
